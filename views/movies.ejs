<% layout('layout') %>
<h2>Movie Search</h2>
<form action="/movies">
  <input name="q" placeholder="Movie name" required />
  <button>Search</button>
</form>

<% if (movies) { %>
  <% if (movies.length > 0) { %>
    <ul>
      <% movies.forEach(m => { %>
        <li>
          <strong><%= m.title %> (<%= m.release_date ? m.release_date.split('-')[0] : 'N/A' %>)</strong><br>
          <%= m.overview %><br>
          <% if (m.poster_path) { %>
            <img src="https://image.tmdb.org/t/p/w200<%= m.poster_path %>">
          <% } %>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No results found.</p>
  <% } %>
<% } %>
